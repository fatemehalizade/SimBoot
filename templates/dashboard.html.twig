<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('public/bootstrap.min.css')}}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('app_dashboard')}}">website name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_user_profile_index')}}">profile</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_category_index')}}">categories</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_blog_index')}}">blogs</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_web_site_profile_index')}}">website profile</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_product_index')}}">products</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_slider_index')}}">sliders</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_gallery_index')}}">Galleries</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_discount_index')}}">Discounts</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_message_index')}}">Messages</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_news_letter_index')}}">NewsLetters</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_comment_index')}}">Comments</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="{{path('app_order')}}">Orders</a>
                </li>
            </ul>
            {% if app.user %}
                <p>{{ app.user.name }}</p><a href='/SimBoot/logout' class='btn btn-primary'>LOG OUT</a>
            {% endif %}
            </div>
        </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
