{% extends 'dashboard.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ gallery.image }}</td>
            </tr>
            <tr>
                <th>Show Image</th>
                <td><img src="{{ asset('public/upload/') ~ gallery.image}}" style='width:80px;height:80px;'/></td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ gallery.createdAt ? gallery.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gallery_index') }}">back to list</a>

    <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
