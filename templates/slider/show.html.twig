{% extends 'dashboard.html.twig' %}

{% block title %}Slider{% endblock %}

{% block body %}
    <h1>Slider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slider.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ slider.title }}</td>
            </tr>
            <tr>
                <th>Summery</th>
                <td>{{ slider.summery }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ slider.image }}</td>
            </tr>
            <tr>
                <th>Image Show</th>
                <td><img src="{{ asset('public/upload/') ~ slider.image}}" style='width:100px;height:100px;'/></td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ slider.createdAt ? slider.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_slider_index') }}">back to list</a>

    <a href="{{ path('app_slider_edit', {'id': slider.id}) }}">edit</a>

    {{ include('slider/_delete_form.html.twig') }}
{% endblock %}
