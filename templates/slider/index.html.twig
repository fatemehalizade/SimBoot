{% extends 'dashboard.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
    <h1>Slider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summery</th>
                <th>Image</th>
                <th></th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>{{ slider.title }}</td>
                <td>{{ slider.summery }}</td>
                <td>{{ slider.image }}</td>
                <td><img src="{{ asset('public/upload/') ~ slider.image}}" style='width:80px;height:80px;'/></td>
                <td>{{ slider.createdAt ? slider.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_slider_show', {'id': slider.id}) }}">show</a>
                    <a href="{{ path('app_slider_edit', {'id': slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_slider_new') }}">Create new</a>
{% endblock %}
